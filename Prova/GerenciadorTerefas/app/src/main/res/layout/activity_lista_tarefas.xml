<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ifpi.edu.br.gerenciadorterefas.ListaTarefasActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A fazer"
            android:textSize="20dp"/>

        <android.support.v7.app.AlertController.RecycleListView
            android:id="@+id/a_fazer_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fazendo"
            android:textSize="20dp"/>

        <android.support.v7.app.AlertController.RecycleListView
            android:id="@+id/fazendo_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feito"
            android:textSize="20dp"/>

        <android.support.v7.app.AlertController.RecycleListView
            android:id="@+id/feito_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cadastrar Tarefa"
            android:onClick="chamaCadastroTarefa"/>
    </LinearLayout>

</ScrollView>
