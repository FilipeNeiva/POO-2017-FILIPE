<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ifpi.edu.br.gerenciadorterefas">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ListaTarefasActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".IdentificadorUsuarioActivity" />
        <activity android:name=".FormularioTerafaActivity" />
        <activity
            android:name=".CadastroUsuarioActivity"
            android:parentActivityName=".IdentificadorUsuarioActivity" />
        <activity android:name=".CadastroTarefaActivity"
            android:parentActivityName=".ListaTarefasActivity"/>
    </application>

</manifest>